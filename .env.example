DISCORD_TOKEN=your_discord_bot_token
GROK_API_KEY=your_grok_key
GROK_BASE_URL=https://api.x.ai
GROK_MODEL=grok-4-1-fast-reasoning-latest
GROK_VISION_MODEL=grok-vision-beta
BOT_NAME=Grok
# Tone mode: professional (default) | casual
BOT_TONE=professional
SUPER_ADMIN_USER_ID=123456789012345678
GIPHY_API_KEY=your_giphy_api_key
POKEMONTCG_API_KEY=
POKEMONTCG_PRICE_TTL_MS=86400000
SYSTEM_PROMPT_FILE=./prompts/system_prompt.txt

# AI Intelligence Enhancement Parameters
# Temperature controls randomness (0.0-2.0). Lower = more focused, Higher = more creative
LLM_TEMPERATURE=0.3
# Top-p nucleus sampling (0.0-1.0). Lower = more focused, Higher = more diverse
LLM_TOP_P=0.9
# Presence penalty (-2.0 to 2.0). Positive values encourage new topics
LLM_PRESENCE_PENALTY=0.1
# Frequency penalty (-2.0 to 2.0). Positive values reduce repetition
LLM_FREQUENCY_PENALTY=0.2
# Max tokens for completion (higher allows longer, more detailed responses)
LLM_MAX_TOKENS=4096

# Memory runtime controls
MEMORY_DEBOUNCE_MS=1500
MEMORY_MAX_MESSAGES_PER_USER=500
MEMORY_MAX_DAYS=45

# Startup hydration mode: full | light | off
# If unset, NODE_ENV=development => light, otherwise full
MEMORY_HYDRATE_MODE=
MEMORY_HYDRATE_MEMBER_LIMIT=1000

# Web search integration
WEB_SEARCH_ENABLED=0
WEB_SEARCH_PROVIDER=brave
BRAVE_SEARCH_API_KEY=

# Slash command registration scope: guild (default), global, or hybrid
COMMAND_REGISTRATION_SCOPE=guild

# Default free-pack set
TCG_DEFAULT_SET_CODE=sv1
# Free-pack cooldown in milliseconds (6h default)
TCG_FREE_PACK_COOLDOWN_MS=21600000

# Fallback to pokemon-tcg-data repo when API is unreachable
POKEMONTCG_DATA_REPO_FALLBACK=1
POKEMONTCG_DATA_REPO_BASE_URL=https://raw.githubusercontent.com/PokemonTCG/pokemon-tcg-data/master

# TCG output detail: 1=true, 0=false
TCG_VERBOSE_MODE=0

# Reveal media mode: off | rare_only | all
TCG_REVEAL_GIF_MODE=off

# Drop robustness controls
TCG_PITY_ENABLED=1
TCG_PITY_THRESHOLD_TIER5=30
TCG_GUARANTEE_MIN_TIER=3

# Live TCG events system
TCG_EVENTS_ENABLED=1

# Auto-claim scheduler
TCG_AUTO_CLAIM_SWEEP_MS=60000
TCG_AUTO_CLAIM_MAX_PENDING=24
TCG_AUTO_CLAIM_BATCH_LIMIT=200

# Market pricing
TCG_MARKET_CREDITS_PER_USD=100
TCG_MARKET_BUY_MULT=1.25
TCG_MARKET_SELL_MULT=0.60
TCG_MARKET_BUY_FLOOR=10
TCG_MARKET_SELL_FLOOR=5

# Async media upgrade timeout after initial reveal reply
TCG_REVEAL_MEDIA_UPGRADE_TIMEOUT_MS=2500

# Local web UI
WEB_UI_ENABLED=0
WEB_UI_HOST=0.0.0.0
WEB_UI_PORT=8787
WEB_UI_ADMIN_USER=admin
# Either set hash or plain password (hash preferred)
WEB_UI_ADMIN_PASSWORD_HASH=
WEB_UI_ADMIN_PASSWORD=
